{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
     "baseUrl": "src",
     "paths": {
      "@/*": ["*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ],
    "rootDirs": ["src", "tests"],
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
     "noImplicitAny": true,
    "skipLibCheck": true
  },

  "ts-node": {
    "esm": true
  }
}
